@using Hm.Core.Domain;
@model Hm.Admin.Models.Supplier.SupplierModel

<div>
    <br />
    @using (Html.BeginForm(string.IsNullOrWhiteSpace(Model.SupplierID) ? "Create" : "Update", "SM431_Supplier_list", FormMethod.Post, new { @id = "supplier_form" }))
    {
       
        @Html.HiddenFor(a => a.CompanyCD)
        <div class="form-container-new">
            <div style="float: left; width: 50%;">

                @if (Model.EnablePrimary)
                {
                    <div class="control-container">
                        @Html.Label("Supplier CD")
                        @Html.TextBoxFor(model => model.SupplierID, Model.UpdateMode ? (object)new { @class = "popuproletxtbox", @readonly = "" } : new { @class = "popuproletxtbox" })
                        @Html.ValidationMessageFor(model => model.SupplierID)
                    </div>
                }
                else
                {
                     @Html.HiddenFor(a => a.SupplierID)
                }                

                <div class="control-container">
                    <label>
                        Supplier Name
                        <span class="clr_red">*</span>
                    </label>
                    @Html.TextBoxFor(model => model.SupplierName, new { @class = "popuproletxtbox", @style = "width:250px;" })
                    @Html.ValidationMessageFor(model => model.SupplierName)
                </div>

                <div class="control-container">
                    @Html.Label("Address")
                    <fieldset style="border:none;">
                        @Html.TextBoxFor(model => model.AddressLine1, new { @class = "popuproletxtbox", @style = "width:250px;" })
                        @Html.TextBoxFor(model => model.AddressLine2, new { @class = "popuproletxtbox", @style = "width:250px;" })
                        @Html.TextBoxFor(model => model.AddressLine3, new { @class = "popuproletxtbox", @style = "width:250px;" })
                    </fieldset>
                    @Html.ValidationMessageFor(model => model.AddressLine1)
                </div>

                <div class="control-container">
                    <label>Supplier Group
                    <span class="clr_red">*</span></label>
                    @Html.DropDownListFor(model => model.SupplierGroup, Model.SupplierGroupList, "-- Select --", new { @class = "popuproletxtbox selectpicker", @style = "width:250px;" })
                    @Html.ValidationMessageFor(model => model.SupplierGroup)
                </div>


                <div class="control-container">
                    <label>Roc Number <span class="clr_red">*</span></label>
                    
                    @Html.TextBoxFor(model => model.ROCNum, new { @class = "popuproletxtbox", @style = "width:150px;" })
                    @Html.ValidationMessageFor(model => model.ROCNum)
                </div>


                <div class="control-container">
                    @Html.Label("Attention")
                    @Html.TextBoxFor(model => model.Attention, new { @class = "popuproletxtbox", @style = "width:250px;" })
                    @Html.ValidationMessageFor(model => model.Attention)
                </div>

                <div class="control-container">
                    @Html.Label("Designation")
                    @Html.TextBoxFor(model => model.Designation, new { @class = "popuproletxtbox", @style = "width:250px;" })
                    @Html.ValidationMessageFor(model => model.Designation)
                </div>


                <div class="control-container">
                    @Html.Label("Telephone")
                    @Html.TextBoxFor(model => model.Phone, new { @class = "popuproletxtbox", @style = "width:150px;" })
                    @Html.ValidationMessageFor(model => model.Phone)
                </div>

                <div class="control-container">
                    @Html.Label("Fax")
                    @Html.TextBoxFor(model => model.Fax, new { @class = "popuproletxtbox", @style = "width:100px;" })
                    @Html.ValidationMessageFor(model => model.Fax)
                </div>

                <div class="control-container">
                    @Html.Label("Email")
                    @Html.TextBoxFor(model => model.Email, new { @class = "popuproletxtbox", @style = "width:250px;" })
                    @Html.ValidationMessageFor(model => model.Phone)
                </div>

                <div class="control-container">
                    @Html.Label("Website")
                    @Html.TextBoxFor(model => model.Website, new { @class = "popuproletxtbox", @style = "width:250px;" })
                    @Html.ValidationMessageFor(model => model.Website)
                </div>

            

                <div class="control-container">
                    @Html.Label("Transport Responsibility")
                    @Html.TextBoxFor(model => model.Transport, new { @class = "popuproletxtbox", @style = "width:250px;" })
                    @Html.ValidationMessageFor(model => model.Transport)
                </div>

                <div class="control-container">
                    @Html.Label("Ship Via")
                    @Html.TextBoxFor(model => model.Transport, new { @class = "popuproletxtbox", @style = "width:250px;" })
                    @Html.ValidationMessageFor(model => model.Transport)
                </div>


           


            </div>
            <div style="float: left; width: 50%;">

                <div class="control-container">
                    <label>
                        Country
                        <span class="clr_red">*</span>
                    </label>
                    @Html.DropDownListFor(model => model.Country, Model.CountryList, "-- Select --", new { @class = "popuproletxtbox selectpicker", @style = "width:200px;" })
                    @Html.ValidationMessageFor(model => model.Country)
                </div>

                <div class="control-container">
                    @Html.Label("TRan. Currency")
                    @Html.DropDownListFor(model => model.TranCurrency, Model.CurrencyList, "-- Select --", new { @class = "popuproletxtbox selectpicker", @style = "width:100px;" })
                    @Html.ValidationMessageFor(model => model.TranCurrency)
                </div>

                <div class="control-container">
                    @Html.Label("G/L Currency")
                    @Html.DropDownListFor(model => model.GLCurrency, Model.CurrencyList, "-- Select --", new { @class = "popuproletxtbox selectpicker", @style = "width:100px;" })
                    @Html.ValidationMessageFor(model => model.GLCurrency)
                </div>


                <div class="control-container">
                    @Html.Label("Payment Mode")
                    @Html.DropDownListFor(model => model.PayMode, Model.PayModeList, "-- Select --", new { @class = "popuproletxtbox selectpicker", @style = "width:200px;" })
                    @Html.ValidationMessageFor(model => model.PayMode)
                </div>

                <div class="control-container">
                    @Html.Label("Payment Term")
                    @Html.DropDownListFor(model => model.PayTerm, Model.PayTermList, "-- Select --", new { @class = "popuproletxtbox selectpicker", @style = "width:100px;" })
                    @Html.ValidationMessageFor(model => model.PayTerm)
                </div>

                <div class="control-container">
                    @Html.Label("Credit Limit")
                    @Html.TextBoxFor(model => model.CreditLimit, new { @class = "popuproletxtbox numeric", @style = "width:180px;" })
                    @Html.ValidationMessageFor(model => model.CreditLimit)
                </div>

                <div class="control-container">
                    @Html.Label("Tax Code")
                    @Html.DropDownListFor(model => model.TaxCD, Model.TaxList, "-- Select --", new { @class = "popuproletxtbox selectpicker", @style = "width:150px;" })
                    @Html.ValidationMessageFor(model => model.TaxCD)
                </div>
               

                <div class="control-container">
                    <fieldset>
                        <legend style=" margin-right: 270px; font-size: 15px; font-weight: bold;">
                            Reference Person - 1
                        </legend>
                        @Html.Label("Name")
                        @Html.TextBoxFor(model => model.RefPersonName1, new { @class = "popuproletxtbox", @style = "width:250px;" })
                        @Html.Label("Designation")
                        @Html.TextBoxFor(model => model.RefPersonDesignation1, new { @class = "popuproletxtbox", @style = "width:250px;" })
                        @Html.Label("Email")
                        @Html.TextBoxFor(model => model.RefEmail1, new { @class = "popuproletxtbox", @style = "width:250px;" })

                        @Html.Label("Hp")
                        @Html.TextBoxFor(model => model.RefPersonHP1, new { @class = "popuproletxtbox", @style = "width:100px;" })
                      
                    </fieldset>
                </div>

                <div class="control-container">
                    <fieldset>
                        <legend style=" margin-right: 270px; font-size: 15px; font-weight: bold;">
                            Reference Person - 2
                        </legend>
                        @Html.Label("Name")
                        @Html.TextBoxFor(model => model.RefPersonName2, new { @class = "popuproletxtbox", @style = "width:250px;" })
                        @Html.Label("Designation")
                        @Html.TextBoxFor(model => model.RefPersonDesignation2, new { @class = "popuproletxtbox", @style = "width:250px;" })
                        @Html.Label("Email")
                        @Html.TextBoxFor(model => model.RefEmail2, new { @class = "popuproletxtbox", @style = "width:250px;" })
                        @Html.Label("Hp")
                        @Html.TextBoxFor(model => model.RefPersonHP2, new { @class = "popuproletxtbox", @style = "width:100px;" })
                       
                    </fieldset>
                </div>



            </div>
        </div>
        <div class="submit-button-container">
            <input type="submit" class="submit-button" />
            <input type="button" class="submit-button" value="Cancel" onclick="window.location.href = '@Url.Action("index")'" />
        </div>
        <div style="clear:both;"></div>

    }
</div>
<div style="clear:both;"> </div>
<script>
    $(document).ready(function () {
        $("#supplier_form").postAjax();
        showdatetimepicker(".datepicker", "no", "mindate");        
        $(".selectpicker").select2();
    });
</script>
