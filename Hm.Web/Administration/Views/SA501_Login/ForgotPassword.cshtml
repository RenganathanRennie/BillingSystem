@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Styles.Render("~/Content/BasicCss")

@model Hm.Admin.Models.User.ForgetPasswordViewModel
@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm("ForgotPassword", "SA501_Login", FormMethod.Post))
{
        <body>       
        <div class="outer">
            <div class="container">
                <div class="inner" style="margin-bottom: 100px; margin-top: 0px;">
                    <div style="background-color: White; padding-top: 75px;" align="center">
                        <input name="usersession" type="hidden" id="usersession" value="0">
                        <div align="center" style="border: solid 0px red; height: 300px; padding-left: 0px;">
                            <div class="login_left">
                            </div>
                            <div class="reset_right">
                                <div class="loginServerValidation">@Html.ValidationMessage("ServerValidation") </div>
                                <div style="text-align: left; border: solid 0px red; padding-top: 10px;">                                   
                                    <div style="float: left; padding-left: 0px; height: 38px; padding-top: 0px;">    
                                        <div class="log_lbl">
                                            <label>
                                                Email
                                            </label>
                                        </div>                                   
                                        @Html.TextBoxFor(model => model.Email, new { @class = "user_txt_box", placeholder = "Please Enter Email Id", tabindex = "1" })
                                        @Html.ValidationMessageFor(model => model.Email)
                                    </div>
                                    <br>
                                    <br>
                                    <div style="float: left; padding-left: 15px; height: 25px; width: 377px; padding-top: 20px;">
                                        <div style="float: left; padding-top: 10px;">
                                            @Html.ActionLink("Back To Login", "Index", new { tabindex = "1" }) </div>
                                        <div>
                                            <div style="float: right; border: solid 0px red; padding-left: 0px;">
                                                <input type="submit" name="btnlog" value="Reset" id="btnlog" class="btn_login" tabindex="2">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="login-footer-outer" align="center">
                            <div class="login-footer">
                                <div class="footer">Designed &amp; Developed By <a href="http://www.saffra.com.sg/" target="_blank">SAFFRA Systems (S) Pte Ltd</a></div>                      
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}
<style>
    .field-validation-error {
        display: inline-table;
        margin-right: 22px;
    }
    .log_drop {
        width: 90.2%;
        float: left;
        padding: 5px 0px;
    }
</style>
